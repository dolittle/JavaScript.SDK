{
    "files.exclude": {
        "**/jspm_packages": true,
        "**/node_modules": true,
        "**/Distribution": false,
        "**/.git": true,
        "**/.svn": true,
        "**/.DS_Store": true
    },
    "cSpell.words": [
        "Dolittle",
        "grpc",
        "microservice",
        "microservices",
        "protobuf",
        "transpiles"
    ],

    "editor.formatOnSave": false,
    "editor.codeActionsOnSave": {
        "source.fixAll.eslint": true
    },
    "eslint.alwaysShowStatus": true
}
